{
  "expo": {
    "name": "BrightMind",
    "slug": "brightmind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/brightmind-logo-white-icon.png",
    "owner": "e_chukwudebere",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#02124E"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.brightmind.app",
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/brightmind-logo-white-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.brightmind.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "runtimeVersion": "1.0.0"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow BrightMind to access your photos for profile picture updates.",
          "cameraPermission": "Allow BrightMind to access your camera for profile picture updates."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "scheme": "brightmind",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "b2ca0569-4609-4365-a034-d6dd32f19783"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/b2ca0569-4609-4365-a034-d6dd32f19783"
    }
  }
}
